<h2>修改个人信息</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, "邮箱"%><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :password, "新密码" %> <i>(为空则不会更改)</i><br />
  <%= f.password_field :password, :autocomplete => "off" %></div>

  <div><%= f.label :password_confirmation, "再输一次" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :current_password, "当前密码" %> <br />
  <%= f.password_field :current_password %></div>

  <div><%= f.submit "保存" %></div>
<% end %>

<h3>注销我的帐户</h3>

<p>Unhappy? <%= button_to "注销帐户", registration_path(resource_name), :data => { :confirm => "注销则无法再次登录网站?" }, :method => :delete %></p>

<%= link_to "后退", :back %>
