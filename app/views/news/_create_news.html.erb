<div class="news-modal gas-modal modal fade" id="createNewsFormContainer" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times-circle"></i></button>
        <h4 class="modal-title">创建企业动态</h4>
      </div>
      <div class="modal-body">
        <%= form_tag '/news', :id => 'createNewsForm' do %>
          <div class="form-item">
            <span class="control-label"><i class="fa fa-asterisk"></i></span>
            <label for="content">动态内容</label>
            <%= text_area_tag 'content', nil, :class => 'form-control', :rows => '5' %>
          </div>
        <%- end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-blue" id="createNewsBtn">创建</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->